<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ArticleDetailsFragment"
    android:background="@color/white">

    <include
        layout="@layout/appbar"
        android:id="@+id/appbarNewsDetail"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/image_article_details"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:src="@drawable/image_not_available"
                android:visibility="gone"
                ></ImageView>
            <ProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/progressBarNewsDetail"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_name"
            android:text="This is a title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_date"
            android:text="1 hours ago"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/grey"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/baseline_access_time_24"
            android:drawablePadding="8dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_author"
            android:text="This is author"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/article_content"
            android:text="This is content"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:stepSize="1"
                android:numStars="5"
                android:progressBackgroundTint="@color/grey"
                android:progressTint="@color/yellow"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
             ></RatingBar>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rating_id"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/baseline_star_rate_24"
                android:drawablePadding="8dp"
                android:visibility="gone"
                ></TextView>
        </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>